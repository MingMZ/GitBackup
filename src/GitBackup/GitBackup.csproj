<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>MingMZ</Authors>
    <Copyright>MingMZ 2017</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Git repository backup utility</Description>
    <PackageProjectUrl>https://github.com/MingMZ/GitBackup</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/MingMZ/GitBackup/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/MingMZ/GitBackup.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Compression.ZipFile" Version="4.3.*" />
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.*" />
    <PackageReference Include="LibGit2Sharp.Portable" Version="0.*" />
    <PackageReference Include="Newtonsoft.Json" Version="10.*" />
    <PackageReference Include="Serilog.Sinks.ColoredConsole" Version="2.*" />
    <PackageReference Include="Serilog.Sinks.File" Version="3.*" />
  </ItemGroup>
</Project>
